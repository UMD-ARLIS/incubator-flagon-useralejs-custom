{
  "manifest_version": 3,
  "name": "UserALE Extension",
  "version": "2.3.0",
  "description": "Injects UserALE.js into every page for testing & user research purposes",
  "icons": {
    "48": "icons/UserALE Logo.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "webRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "page": "background.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"],
      "all_frames": true
    }
  ],
  "options_ui": {
    "page": "optionsPage.html"
  }
}